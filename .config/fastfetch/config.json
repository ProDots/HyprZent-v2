{
  "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",

  "logo": {
    "type": "file",
    "source": "~/.config/fastfetch/logos/main-logo.ascii",
    "color": {
      "1": "#81A1C1",
      "2": "#B48EAD",
      "3": "#EBCB8B",
      "4": "#88C0D0",
      "5": "#A3BE8C"
    }
  },

  "modules": [
    "break",

    {
      "type": "custom",
      "format": "┌────────────────────── Hardware ──────────────────────┐",
      "outputColor": "#BF616A"
    },
    {
      "type": "title",
      "key": " PC",
      "keyColor": "#A3BE8C"
    },
    {
      "type": "cpu",
      "key": "│ ├󰍛 CPU",
      "showPeCoreCount": true,
      "format": "{1}",
      "keyColor": "#A3BE8C"
    },
    {
      "type": "gpu",
      "key": "│ ├󰍛 GPU",
      "keyColor": "#A3BE8C"
    },
    {
      "type": "memory",
      "key": "└ └󰍛 Memory",
      "keyColor": "#A3BE8C"
    },
    {
      "type": "custom",
      "format": "└──────────────────────────────────────────────────────┘",
      "outputColor": "#BF616A"
    },
    "break",

    {
      "type": "custom",
      "format": "┌────────────────────── Software ──────────────────────┐",
      "outputColor": "#BF616A"
    },
    {
      "type": "os",
      "key": " OS",
      "keyColor": "#EBCB8B"
    },
    {
      "type": "kernel",
      "key": "│ ├ Kernel",
      "keyColor": "#EBCB8B"
    },
    {
      "type": "packages",
      "key": "│ ├󰏖 Packages",
      "keyColor": "#EBCB8B"
    },
    {
      "type": "shell",
      "key": "│ ├ Shell",
      "keyColor": "#EBCB8B"
    },
    {
      "type": "command",
      "key": "│ ├ OS Age",
      "keyColor": "#EBCB8B",
      "text": "echo \"Installed: $(date -d @$(stat -c %W /) +'%Y-%m-%d')\""
    },
    {
      "type": "uptime",
      "key": "└ └ Uptime",
      "keyColor": "#EBCB8B"
    },
    "break",

    {
      "type": "de",
      "key": " DE",
      "keyColor": "#88C0D0"
    },
    {
      "type": "lm",
      "key": "│ ├ LM",
      "keyColor": "#88C0D0"
    },
    {
      "type": "wm",
      "key": "│ ├ WM",
      "keyColor": "#88C0D0"
    },
    {
      "type": "gpu",
      "key": "│ ├󰍛 GPU Driver",
      "format": "{3}",
      "keyColor": "#88C0D0"
    },
    {
      "type": "wmtheme",
      "key": "└ └󰉼 Theme",
      "keyColor": "#88C0D0"
    },
    {
      "type": "custom",
      "format": "└────────────────────────────────────────────────────┘",
      "outputColor": "#BF616A"
    },

    {
      "type": "custom",
      "format": "               \u001b[90m  \u001b[38;5;124m  \u001b[38;5;142m  \u001b[38;5;180m  \u001b[38;5;109m  \u001b[38;5;173m  \u001b[38;5;221m  \u001b[38;5;117m "
    },

    "break",

    /*
     * ───── Logos alternativos ─────
     * Para activar cualquiera, estos son los pasos:
     * 
     * 1. Deja la coma después de "break" (ya está).
     * 2. Descomenta uno o ambos bloques siguientes.
     * 
     * Mini-logo (para setups compactos o estéticos)
     * {
     *   "type": "custom",
     *   "format": "file:~/.config/fastfetch/logos/mini-logo.ascii"
     * },
     * 
     * Arch-logo (logo clásico de Arch Linux, opcional o decorativo)
     * {
     *   "type": "custom",
     *   "format": "file:~/.config/fastfetch/logos/arch-logo.ascii"
     * }
     * 
     * Si activas los dos, no olvides mantener la coma entre ellos.
     * Puedes moverlos arriba si deseas mostrar los logos al inicio.
     */
  ]
}